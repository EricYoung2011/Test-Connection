<Window x:Class="MonopolyDealClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="connectButton" Content="Connect" HorizontalAlignment="Left" Margin="124,30,0,0" VerticalAlignment="Top" Width="75" Click="connectButton_Click" />
        <TextBox x:Name="nameBlock" HorizontalAlignment="Left" Height="20" Margin="10,30,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Width="99"/>
        <TextBox x:Name="display" HorizontalAlignment="Left" Height="240" Margin="312,21,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="181" IsReadOnly="True"/>
        <TextBox x:Name="textBlock" HorizontalAlignment="Left" Height="66" Margin="10,86,0,0" TextWrapping="Wrap" Text="Will this work?" VerticalAlignment="Top" Width="198"/>
        <Button x:Name="sendButton" Content="Send" HorizontalAlignment="Left" Margin="133,157,0,0" VerticalAlignment="Top" Width="75" Click="sendButton_Click"/>

    </Grid>
</Window>
